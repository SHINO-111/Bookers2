<div class='container pt-3 px-sm-0'>
   <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h1>Editing Book</h1>
            <% if @book.errors.any? %>
                <h3>
                    <%= @book.errors.count %> <%= @book.errors.count == 1 ? 'error' : 'errors' %> prohibited this obj from being saved:
                </h3>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>

              <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
                  <div class="form-group">
                      <p>Title</p>
                      <%= f.text_field :title  , class: "form-control"%>
                  </div>

                  <div class="form-group">
                      <p>Opinion</p>
                      <%= f.text_area :body , class: "form-control"%>
                  </div>
                  <%= f.submit 'Update Book' ,class: "btn btn-success mb-3"%>

                <% end %>
                <td><%= link_to "Show" ,book_path(@book.id)%></td>
                | 
                <td><%= link_to "Back" ,books_path%></td>
        </div>
    </div>
</div>


